#algolia-home-search #header-search-input {
	border-radius: 0;
  	border: none;
    border-bottom: 1px solid #979797;
    background: transparent;
    background-image: url('{{ 'search-solid.png' | asset_img_url }}');
    background-repeat: no-repeat;
    background-position: right 10px center;
    background-size: 20px;
}

#algolia-home-search #header-search-input::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
  color: #9f9f9f;
  opacity: 1; /* Firefox */
}

#algolia-home-search #header-search-input:-ms-input-placeholder { /* Internet Explorer 10-11 */
  color: #9f9f9f;
}

#algolia-home-search #header-search-input::-ms-input-placeholder { /* Microsoft Edge */
  color: #9f9f9f;
}

#algolia-home-search .algolia-quicksearch-container {
	padding: 0; 
}

#algolia-home-search .form-container {
 	border: none; 
}