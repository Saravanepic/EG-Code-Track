<section class="max-w-6xl mx-auto px-4 md:px-8 py-5 md:py-16 xl:py-20">
  <div class="grid sm:grid-cols-3 md:grid-cols-5 gap-8 lg:gap-16 xl:gap-40 items-center">
    <div class="sm:col-span-2 md:col-span-3 order-2">
      <div class="sitewide--title-wrapper">
        <h1 class="page--title">
          {{ section.settings.heading }}
        </h1>
      </div>
      <div class="text-lg">
        {{ section.settings.text }}
      </div>
    </div>
    <div class="order-1 sm:order-3 md:col-span-2">
    {% include 'responsive-image' with section.settings.cms_image %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "CMS Title Section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Paragraph",
      "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>"
    },
    {
      "type": "image_picker",
      "id": "cms_image",
      "label": "Content Image"
    }
  ],
  "presets": [
    {
      "name": "CMS Title Section"
    }
  ]
}
{% endschema %}