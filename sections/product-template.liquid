<div itemscope itemtype="http://schema.org/Product">

  <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
  <meta itemprop="image" content="https:{{ product.featured_media.preview_image | img_url: 'grande' }}">
  <div itemprop="brand" itemtype="https://schema.org/Brand" itemscope>
        <meta itemprop="name" content="{{ product.vendor }}" />
  </div>
  <meta itemprop="sku" content="{{ product.selected_or_first_available_variant.sku }}">


  {% comment %}Pick an option only makes sense together with dropdowns{% endcomment %}
  {% if section.settings.product_variant_style == 'dropdowns' %}
    {% assign pick_an_option = true %}
  {% else %}
    {% assign pick_an_option = false %}
  {% endif %}

  {% if pick_an_option %}
    {%- assign current_variant = product.selected_variant -%}
  {% else %}
    {%- assign current_variant = product.selected_or_first_available_variant -%}
  {% endif %}

  <!-- {{ current_variant }} -->
  <!-- {{ current_variant.available }} -->

  {% assign on_sale = false %}
  {% if current_variant.compare_at_price > current_variant.price %}
    {% assign on_sale = true %}
  {% endif %}

  {% case section.settings.image_size %}
    {% when 'small' %}
      {%- assign product_description_width = 'large--seven-twelfths' -%}
      {%- assign product_image_width = 'large--five-twelfths' -%}
      {% when 'medium' %}
        {%- assign product_description_width = 'large--six-twelfths' -%}
        {%- assign product_image_width = 'large--six-twelfths' -%}
        {% when 'large' %}
          {%- assign product_description_width = 'large--five-twelfths' -%}
          {%- assign product_image_width = 'large--seven-twelfths' -%}
        {% endcase %}

  {% comment%}Work out whether product is pre-order based on collection{% endcomment %}
  {% assign pre_order = false %}
  {% for c in product.collections %}
    {% if c.handle == "pre-order" %}
      {% assign pre_order = true %}
    {% endif %}
  {% endfor %}

  <div class="gridlayout product-single product-sticky-wrapper{% if section.settings.product_variant_style == 'dropdowns' %} variant-dropdown-enabled{% else %} variant-swatches-enabled{% endif %}" data-section-id="{{ section.id }}">

    <input type="hidden" id="thumbnail_changes_variant" value="{% if section.settings.thumbnail_changes_variant %}true{% else %}false{% endif %}" />

    <div class="product-images-container{{ product_image_container_width }}">

      <div class="grid__item {{ product_image_width }} context mobile--no-top-margin">
        <div class="js-lightbox-gallery product-single__medias product-images-slider-mobile{% if section.settings.image-display == 'thumbnails' %} product-single__thumbnails product-single__thumbnails--{{ section.settings.thumbnail_position }}{% else %} product-single__fullsize{% endif %}">
          {% assign featured_media = current_variant.featured_media | default: product.featured_media %}

          {% render 'product-media', product: product, section_id: section.id, featured_media_id: featured_media.id, enable_image_zoom: section.settings.enable_image_zoom, enable_video_loop: section.settings.enable_video_loop %}
        </div>
      </div>
    </div>

    <div class="grid__item {{ product_description_width }}">

      <div class="ui{% if section.settings.enable_sticky %} sticky product-sticky{% endif %}">

        {% if settings.enable-sale-badge %}
          <div class="product-page--sale-badge{% unless product.compare_at_price_max > current_variant.price %} hide{% endunless %}">
            {{ 'products.product.on_sale' | t }}
          </div>
        {% endif %}

      	<div class="product-details-wrapper" {% if section.settings.show_sku %}data-show-sku="true"{% else %}data-show-sku="false"{% endif %}>
          <div class="gridlayout product-meta-header">
            {% if section.settings.show_vendor and product.vendor != "" %}
              <div class="grid__item product__meta--vendor large--one-half">
                {% capture url %}/collections/{{ product.vendor | handleize }}{% endcapture %}
                <h4>{{ product.vendor | link_to: url }}</h4>
              </div>
            {% endif %}

            {% if section.settings.show_sku %}
              <div class="grid__item product__meta--sku large--one-half{% unless section.settings.show_vendor and product.vendor != "" %} push--large--one-half{% endunless %}{% if current_variant.sku == "" %} hide{% endif %}">
                    <h4>{{ 'customer.order.sku' | t }}: <span class="js__currentVariantSKU">{{ current_variant.sku }}</span></h4>
              </div>
            {% endif %}
          </div>

          {% capture url %}/products/{{ product.handle }}{% endcapture %}
          <h1 itemprop="name" class="product-details-product-title">{{ product.title | link_to: url }}</h1>

          {% if section.settings.description_position == 'inline_top' %}
            <div class="product-description product-details--form-wrapper---below rte{% if section.settings.enable_readmore %} readmore{% endif %}" itemprop="description">
              {{ product.description }}
            </div>
          {% endif %}



      	  <!-- /price_display -->
          {% if product.metafields.Details.price_display_override == "POA" %}

            {% if product.available %}
                <div class="js-poa-form">
                    {{ section.settings.poa_contact_text }}
                </div>
            {% else %}
                <div class="js-poa-form">
                    {% include 'out-of-stock-form' %}
                </div>
            {% endif %}
            
            <div class="padder"></div>

            {% comment %} START DETAILS {% endcomment %}
            <div itemprop="offers" itemscope itemtype="http://schema.org/Offer" class="product-details--form-wrapper{% if product.available %} product-details--form-wrapper---in-stock{% else %} product-details--form-wrapper---out-of-stock{% endif %}">
                <meta itemprop="priceCurrency" content="{{ shop.currency }}" />
                <meta itemprop="url" content="{{ shop.url }}{{ product.url }}" />
                {% if product.metafields.Details.price_display_override == "POA" %}
                <meta itemprop="price" content="0.00" />
                {% endif %}
                <link itemprop="availability" href="http://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}" />


                <input type="hidden" class="prod_id_class" data-p_id="{{ product.id }}">
                {% if product.variants.size == 1 %}
                  <div class="product__express-dispatch" style="display:none; color: {{section.settings.express_despatch_color}}">{{ section.settings.express_despatch_message }}</div>
                {% endif %}

              {% comment %}
              {% if product.available and product.variants.size == 1 and product.variants[0].inventory_quantity > 0 %}
                <div class="product__express-dispatch" style="color: {{section.settings.express_despatch_color}}">{{ section.settings.express_despatch_message }}</div>
              {% else %}
                <!-- Express despatch disabled -->
              {% endif %}
              {% endcomment %}

              <div class="product__contact-text">
                {{ section.settings.contact_text }}
              </div>

              {% comment %} <!-- begin accordion -->
              <div class="product-single__accordion js-accordion">

              {% if product.tags contains 'Gift Card' %}

                {% if section.settings.gift_card_tcs != blank %}
                  {% capture accordion_item_id %}gift_card_tcs{% endcapture %}
                  {% capture accordion_item_title %}Terms &amp; Conditions{% endcapture %}
                  {% assign accordion_item_content = section.settings.gift_card_tcs %}
                  {% include 'accordion-item' %}
                {% endif %}

              {% else %}
                    {% unless product.tags contains 'Not-eligible-for-PaybyFinance' or settings.own_art_product == false %}
                      {% capture accordion_item_id %}own_art{% endcapture %}
                      {% capture accordion_item_title %}
                      <span class="own-art--accordion">
                      {% render 'own-art-logo' with color: 'black' %}
                      Own Art
                      <span class="own-art--subtext">This artwork is part of the OWN ART Scheme.</span>
                      </span>
                      {% endcapture %}
                      {% capture accordion_item_content %}
                        {{ section.settings.pbf_info }}
                        <!--<div class="js-pbf-hook"></div>-->
                      {% endcapture %}
                      {% include 'accordion-item'  %}
                    {% endunless %}

                    {% capture accordion_item_id %}specifications{% endcapture %}
                    {% capture accordion_item_title %}Specifications{% endcapture %}
                    {% capture accordion_item_content %}
                      {% if product.metafields.accentuate.signed != blank %}<b>Signed:</b> {{ product.metafields.accentuate.signed}} {% endif %}
                      {% if product.metafields.accentuate.framed != blank %}<br><b>Framed:</b> {{ product.metafields.accentuate.framed}} {% endif %}
                      {% if product.metafields.accentuate.hand_finished != blank %}<br><b>Hand Finished:</b> {{ product.metafields.accentuate.hand_finished }} {% endif %}
                      <br><b>Medium:</b>
                      {% if product.metafields.accentuate.silkscreen != blank %}Silkscreen, {% endif %}
                      {% if product.metafields.accentuate.giclee != blank %}Giclee, {% endif %}
                      {{ product.metafields.accentuate.medium }}
                      <br><b>Edition Type:</b> {{ product.metafields.accentuate.edition_type}}
                      {% if product.metafields.accentuate.set_of_works != blank %}<br><b>Set of Works:</b> {{ product.metafields.accentuate.set_of_works}} {% endif %}
                      {% if product.metafields.accentuate.edition_size != blank %}<br><b>Edition Size:</b> {{ product.metafields.accentuate.edition_size}} {% endif %}
                      <br><b>Size (cm):</b> {{ product.metafields.accentuate.paper_size_cm}}
                      {% if product.metafields.accentuate.image_size_cm != blank %}<br><b>Image Size (cm):</b> {{ product.metafields.accentuate.image_size_cm}} {% endif %}
                      <br><b>SKU:</b> {{ product.metafields.accentuate.ar_sku }}
                    {% endcapture %}
                    {% include 'accordion-item', classes: 'js-active' %}

                    {% if section.settings.framing_info != blank %}
                      {% capture accordion_item_id %}framing{% endcapture %}
                      {% capture accordion_item_title %}Framing{% endcapture %}
                      {% assign accordion_item_content = section.settings.framing_info %}
                      {% include 'accordion-item' %}
                    {% endif %}

                    {% if section.settings.shipping_info != blank %}
                      {% capture accordion_item_id %}shipping{% endcapture %}
                      {% capture accordion_item_title %}Shipping{% endcapture %}
                      {% assign accordion_item_content = section.settings.shipping_info %}
                      {% include 'accordion-item' %}
                    {% endif %}

                    {% assign artist_handle = product.vendor | handleize %}
                    {% assign artist_collection = collections[artist_handle] %}
                    {% if artist_collection.description != blank %}
                      {% capture accordion_item_id %}about_artist{% endcapture %}
                      {% capture accordion_item_title %}About the artist{% endcapture %}
                      {% assign accordion_item_content = artist_collection.description %}
                      {% include 'accordion-item' %}
                    {% endif %}

              {% endif %}


              </div>
              <!-- end accordion --> {% endcomment %}

            </div>
       		  {% comment %} END DETAILS {% endcomment %}

          {% elsif product.metafields.Details.price_display_override == "Coming Soon" %}
          	<h2>COMING SOON</h2>
            {% comment %} START DETAILS {% endcomment %}
            <div itemprop="offers" itemscope itemtype="http://schema.org/Offer" class="product-details--form-wrapper{% if product.available %} product-details--form-wrapper---in-stock{% else %} product-details--form-wrapper---out-of-stock{% endif %}">
                <meta itemprop="priceCurrency" content="{{ shop.currency }}">
                <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
                {% if product.metafields.Details.price_display_override == "POA" %}
                  <meta itemprop="price" content="0.00" />
                {% endif %}
                <link itemprop="availability" href="http://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}">


                <input type="hidden" class="prod_id_class" data-p_id="{{ product.id }}">
                {% if product.variants.size == 1 %}
                  <div class="product__express-dispatch" style="display:none; color: {{section.settings.express_despatch_color}}">{{ section.settings.express_despatch_message }}</div>
                {% endif %}

                {% comment %}
                {% if product.available and product.variants.size == 1 and product.variants[0].inventory_quantity > 0 %}
                  <div class="product__express-dispatch" style="color: {{section.settings.express_despatch_color}}">{{ section.settings.express_despatch_message }}</div>
                {% else %}
                  <!-- Express despatch disabled -->
                {% endif %}
                {% endcomment %}

                <div class="product__contact-text">
                  {{ section.settings.contact_text }}
                </div>

                {% comment %} <!-- begin accordion -->
                <div class="product-single__accordion js-accordion">

                {% if product.tags contains 'Gift Card' %}

                  {% if section.settings.gift_card_tcs != blank %}
                    {% capture accordion_item_id %}gift_card_tcs{% endcapture %}
                    {% capture accordion_item_title %}Terms &amp; Conditions{% endcapture %}
                    {% assign accordion_item_content = section.settings.gift_card_tcs %}
                    {% include 'accordion-item' %}
                  {% endif %}

                {% else %}
                      {% unless product.tags contains 'Not-eligible-for-PaybyFinance' or settings.own_art_product == false %}
                        {% capture accordion_item_id %}own_art{% endcapture %}
                        {% capture accordion_item_title %}
                        <span class="own-art--accordion">
                        {% render 'own-art-logo' with color: 'black' %}
                        Own Art
                        <span class="own-art--subtext">This artwork is part of the OWN ART Scheme.</span>
                        </span>
                        {% endcapture %}
                        {% capture accordion_item_content %}
                          {{ section.settings.pbf_info }}
                          <!--<div class="js-pbf-hook"></div>-->
                        {% endcapture %}
                        {% include 'accordion-item'  %}
                      {% endunless %}

                      {% capture accordion_item_id %}specifications{% endcapture %}
                      {% capture accordion_item_title %}Specifications{% endcapture %}
                      {% capture accordion_item_content %}
                        {% if product.metafields.accentuate.signed != blank %}<b>Signed:</b> {{ product.metafields.accentuate.signed}} {% endif %}
                        {% if product.metafields.accentuate.framed != blank %}<br><b>Framed:</b> {{ product.metafields.accentuate.framed}} {% endif %}
                        {% if product.metafields.accentuate.hand_finished != blank %}<br><b>Hand Finished:</b> {{ product.metafields.accentuate.hand_finished }} {% endif %}
                        <br><b>Medium:</b>
                        {% if product.metafields.accentuate.silkscreen != blank %}Silkscreen, {% endif %}
                        {% if product.metafields.accentuate.giclee != blank %}Giclee, {% endif %}
                        {{ product.metafields.accentuate.medium }}
                        <br><b>Edition Type:</b> {{ product.metafields.accentuate.edition_type}}
                        {% if product.metafields.accentuate.set_of_works != blank %}<br><b>Set of Works:</b> {{ product.metafields.accentuate.set_of_works}} {% endif %}
                        {% if product.metafields.accentuate.edition_size != blank %}<br><b>Edition Size:</b> {{ product.metafields.accentuate.edition_size}} {% endif %}
                        <br><b>Size (cm):</b> {{ product.metafields.accentuate.paper_size_cm}}
                        {% if product.metafields.accentuate.image_size_cm != blank %}<br><b>Image Size (cm):</b> {{ product.metafields.accentuate.image_size_cm}} {% endif %}
                        <br><b>SKU:</b> {{ product.metafields.accentuate.ar_sku }}
                      {% endcapture %}
                      {% include 'accordion-item', classes: 'js-active' %}

                      {% if section.settings.framing_info != blank %}
                        {% capture accordion_item_id %}framing{% endcapture %}
                        {% capture accordion_item_title %}Framing{% endcapture %}
                        {% assign accordion_item_content = section.settings.framing_info %}
                        {% include 'accordion-item' %}
                      {% endif %}

                      {% if section.settings.shipping_info != blank %}
                        {% capture accordion_item_id %}shipping{% endcapture %}
                        {% capture accordion_item_title %}Shipping{% endcapture %}
                        {% assign accordion_item_content = section.settings.shipping_info %}
                        {% include 'accordion-item' %}
                      {% endif %}

                      {% assign artist_handle = product.vendor | handleize %}
                      {% assign artist_collection = collections[artist_handle] %}
                      {% if artist_collection.description != blank %}
                        {% capture accordion_item_id %}about_artist{% endcapture %}
                        {% capture accordion_item_title %}About the artist{% endcapture %}
                        {% assign accordion_item_content = artist_collection.description %}
                        {% include 'accordion-item' %}
                      {% endif %}

                {% endif %}


                </div>
                <!-- end accordion --> {% endcomment %}

            </div>
       		{% comment %} END DETAILS {% endcomment %}
          {% else %}

            {% comment %} START Add to Cart Form {% endcomment %}
            <div itemprop="offers" itemscope itemtype="http://schema.org/Offer" class="product-details--form-wrapper{% if product.available %} product-details--form-wrapper---in-stock{% else %} product-details--form-wrapper---out-of-stock{% endif %}">
              <meta itemprop="priceCurrency" content="{{ shop.currency }}">
              <meta itemprop="url" content="{{ shop.url }}{{ product.url }}">
              {% if product.metafields.Details.price_display_override == "POA" %}
                <meta itemprop="price" content="0.00" />
              {% endif %}
              <link itemprop="availability" href="http://schema.org/{% if product.available %}InStock{% else %}OutOfStock{% endif %}">

              {% if pre_order %}
              {% endif %}

              <div class="form-vertical">
                {% assign hideForm = false %}
                {% if product.metafields.details.price_display_override == "POA" and product.available %}
                  {% assign hideForm = true %}
                {% endif %}
                {% unless hideForm %}

                {% form 'product', product, id: "AddToCartForm" %}
                  <input type="hidden" class="pid" value="{{product.id}}">
                  <input type="hidden" class="ptitle" value="{{product.title | remove: "'" | remove: '"'}}">
                  <input type="hidden" class="pprice" value="{{product.variants.first.price | times: 0.01}}">
                  <input type="hidden" class="pbrand" value="{{product.vendor | remove: "'" | remove: '"'}}">
                  <input type="hidden" class="ptype" value="{{product.type | remove: "'" | remove: '"'}}">
                  <input type="hidden" class="pcollection" value="{{ product.collections.last.title | remove: "'" | remove: '"' }}">

                  {% unless product.tags contains 'Not-Artwork-' %}

                    {% if product.variants.size == 1 %}
                      <div style="display: none;" data-show-framing="{%- paginate collections['frames'].products by 1000 -%}
                        {%- for frame in collections['frames'].products -%}
                          {%- if product.tags contains frame.type -%}
                            1
                            {%- break -%}
                          {%- endif -%}
                        {%- endfor -%}
                      {%- endpaginate -%}">
                        <h2>Framing</h2>
                        <!-- recommended frame: {{ product.metafields.accentuate.recommended_frame }} -->
                        {% if product.metafields.accentuate.recommended_frame %}
                          {% assign recommended_frame = product.metafields.accentuate.recommended_frame %}
                        {% else %}
                          {% assign recommended_frame = false %}
                        {% endif %}

                        {% assign tags = product.tags %}
                        {% include 'frame-swatch', recommended_frame : recommended_frame %}

                      </div>
                    {% else %}
                    {% for variant in product.variants %}

                      {% assign variantIndex = forloop.index %}

                      <div id="framing-options-{{variantIndex}}" data-framing-options="{{ variant.id }}" style="display: none;">
                        <h2>Framing</h2>
                        <!-- recommended frame: {{ product.metafields.accentuate.recommended_frame }} -->
                        {% if product.metafields.accentuate.recommended_frame %}
                          {% assign recommended_frame = product.metafields.accentuate.recommended_frame %}
                        {% else %}
                          {% assign recommended_frame = false %}
                        {% endif %}
                        {% assign tags = variant.metafields.accentuate.tags|split:'|' %}
                        {% include 'frame-swatch', recommended_frame : recommended_frame %}
                      </div>
                    {% endfor %}
                    {% endif %}
                  {% endunless %}


                  {% assign hide_default_title = false %}
                  {% if product.variants.size == 1 and product.variants.first.title contains 'Default' %}
                    {% assign hide_default_title = true %}
                  {% endif %}

                  {% if product.variants.size > 1 %}

                    {% if section.settings.product_variant_style == 'dropdowns' %}

                      {% for option in product.options_with_values %}
                        <div class="selector-wrapper js{% if hide_default_title == true %} hide{% endif %}">
                          <wetheme-dropdown>
                            <label for="SingleOptionSelector-{{ forloop.index0 }}">{{ option.name }}</label>
                            <select class="needsclick form-control" id="SingleOptionSelector-{{ forloop.index0 }}" data-option="option{{ option.position }}" autocomplete="off" >
                              {% for value in option.values %}
                                <option {% if option.selected_value == value %}selected{% endif %} value="{{ value | escape }}">{{ value }}</option>
                              {% endfor %}
                            </select>
                          </wetheme-dropdown>
                        </div>
                      {% endfor %}

                    {% else %}
                      {% for option in product.options %}
                        {% include 'swatch' with option %}
                      {% endfor %}
                    {% endif %}

                  {% endif %}


                  <select name="id" id="productSelect-{{ section.id }}" class="needsclick product-single__variants original-select no-js" autocomplete="off">
                    {% for variant in product.variants %}
                      {% if variant.available %}

                        {% comment %}
                          Note: if you use option_selection.js, your <select> tag will be overwritten, meaning what you have inside <option> will not reflect what you coded below.
                        {% endcomment %}
                        <option {% if variant == product.selected_or_first_available_variant %} selected="selected" {% endif %} data-sku="{{ variant.sku }}" value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money_without_trailing_zeros }}</option>

                      {% else %}
                        <option disabled="disabled">
                          {{ variant.title }} - {{ 'products.product.sold_out' | t }}
                        </option>
                      {% endif %}
                    {% endfor %}
                  </select>

                  {% if section.settings.show_quantity_selector %}

                    <div class="{% if section.settings.product_variant_style == 'dropdowns' %}selector-wrapper{% else %}swatches-wrapper{% endif %} {% if section.settings.image_size == 'large' %}col-md-12{% else %}col-md-6{% endif %} col-sm-12 col-xs-12">
                      <label for="Quantity" class="quantity-selector product-sub-label">{{ 'products.product.quantity' | t }}</label>

                      {% if settings.ajax_cart_method == "drawer" %}
                        <input type="number" id="Quantity" name="quantity" value="1" min="1" class="quantity-selector" />
                      {% else %}
                        <div class="js-qty nonajax-quantity-selector">
                          <button type="button" class="js-qty__adjust js-qty__adjust--minus icon-fallback-text">
                            <i class="fa fa-minus" aria-hidden="true"></i>
                            <span class="fallback-text">−</span>
                          </button>
                          <input type="text" class="js-qty__num" value="1" min="1" aria-label="quantity" pattern="[0-9]*" name="quantity" id="Quantity">
                          <button type="button" class="js-qty__adjust js-qty__adjust--plus icon-fallback-text">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            <span class="fallback-text">+</span>
                          </button>
                        </div>
                      {% endif %}
                    </div>
                  {% endif %}

                  {% if product.compare_at_price_max > product.price %}
                  <p id="ComparePrice" class="js">
                    <span class="money">{{ current_variant.compare_at_price | money_without_trailing_zeros }}</span>
                  </p>
                  <span class="visually-hidden">{{ 'products.general.sale_price' | t }}</span>
                  {% endif %}

                  {% case section.settings.show_discount %}

                    {% when 'percentage' %}

                      <li class="product-page--pricing--discount">
                        <span class="variant-percentage-wrapper{% unless on_sale %} hide{% endunless %}">
                          -<span class="variant-percentage">{{ current_variant.compare_at_price | minus: current_variant.price | times: 100.0 | divided_by: current_variant.compare_at_price | money_without_currency | times: 100 | remove: '.0'}}%</span>
                        </span>
                      </li>

                    {% when 'value' %}

                      <li class="product-page--pricing--discount">
                          <span class="variant-value-wrapper{% unless on_sale %} hide{% endunless %}">
                            -<span class="variant-value"><span class="money">{{ current_variant.compare_at_price | minus: current_variant.price | money_without_trailing_zeros }}</span></span>
                          </span>
                      </li>

                  {% endcase %}

                  <div class="js-product-price-wrapper {% unless product.available %}visually-hidden{% endunless %} limoniapps-discountninja-productprice" " data-is-available="{{ product.available }}">
                  <span class="visually-hidden">{{ 'products.general.regular_price' | t }}</span>
                  <span id="ProductPrice" class="h2 js" itemprop="price" content="{{  product.selected_or_first_available_variant.price | divided_by: 100.00 }}">
                    <span class="money">{{ current_variant.price | money_without_trailing_zeros }}</span>
                  </span>
                  <span id="ProductFramePrice" class="h2 hidden">
                    <span class="money"></span>
                  </span>
                  <span id="ProductPriceSuffix" style="display: none">Unframed</span>
                  </div>
                  <div class="limoniapps-discountninja-promotioncard-productpage"></div>
                    {% include 'unit-price-measurement-variant', variant: current_variant %}

                    {%- if shop.taxes_included or shop.shipping_policy.body != blank -%}
                      <div class="product-page__policies rte">
                        {%- if shop.taxes_included and section.settings.tax_included -%}
                          {{ 'products.product.include_taxes' | t }}
                        {%- endif -%}
                        {%- if shop.shipping_policy.body != blank and section.settings.shipping_policy -%}
                          {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
                        {%- endif -%}
                      </div>
                    {%- endif -%}

                  
                  
              
                  {% comment %} 
                  <hr/>
                  {{ cart.currency.symbol }} - {{ checkout.currency.symbol  }} - {{ shop.currency  }}
                  <hr/>
                  additional info if product is over 250 to own art{% endcomment %}
                  
                  {% unless product.tags contains "Not-eligible-for-PaybyFinance" %}
