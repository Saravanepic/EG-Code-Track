<script>
  jQuery(function ($) {
    var variants = {{product.variants | json}};
    var options = {{product.options_with_values | json}};
    var variantTags = { {%- for variant in product.variants -%}
      "{{variant.id}}":{{variant.metafields.accentuate.tags | split:'|' | json}},
    {%- endfor -%} };

    function getCurrentFrameOptionElement() {
      if ($('[data-show-framing=1]')[0]) {
        return $('[data-show-framing=1]');
      }

      var options = $('[data-option]').map(function (index, option) {
        return {
          key: $(option).data('option'),
          value: option.value,
        };
      }).toArray();
      var currentVariant = variants.filter(function (variant) {
        return options.filter(function (option) {
          return variant[option.key] === option.value;
        }).length === options.length;
      })[0];
      if (!currentVariant) {
        return;
      }
      return $('[data-framing-options='+currentVariant.id+']');
    }

    function showFrameOptions() {
      $('[data-framing-options]').each(function (index, item) {
        $(item).hide();
        $(item).find('input').each(function (index, item) {
          $(item).prop('disabled', true);
        });
      });
      document.getElementById('ProductPriceSuffix').style.display = 'none';

      let $frameOptions = getCurrentFrameOptionElement();
      if (!$frameOptions) {
        return;
      }

      $frameOptions.find('input').each(function (index, item) {
        $(item).prop('disabled', false);
      }).first().click();

      if ($frameOptions.find('input').length < 2) {
        return;
      }

      $frameOptions.show();
      document.getElementById('ProductPriceSuffix').style.display = 'inline-block';
    }
    showFrameOptions();

    $('[data-option]').change(showFrameOptions);
  });
</script>

