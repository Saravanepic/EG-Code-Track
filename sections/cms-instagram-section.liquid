<section class="bg-gray-100 px-4 md:px-8 py-5 md:py-16 xl:py-20">
  <div class="max-w-6xl mx-auto text-center">
    <h2>{{ section.settings.heading }}</h2>
    <div class="mb-10">
      <div id="feed-18036" class="instafeed-shopify"></div>
    </div>
    <a href="{{ section.settings.link }}" target="_blank" class="btn">{{ section.settings.link_text }}</a>
  </div>
</section>

{% schema %}
{
  "name": "CMS Instagram Section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "inline_richtext",
      "id": "link_text",
      "label": "Link Text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "CMS Instagram Section"
    }
  ]
}
{% endschema %}