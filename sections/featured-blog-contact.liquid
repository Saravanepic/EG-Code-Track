{%- assign blog = blogs[section.settings.blog] -%}

{% case section.settings.colors %}
  {% when 'white' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--white">
  {% when 'light' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--light">
  {% when 'accent' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--accent">
  {% when 'dark' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--dark">
{% endcase %}

    <div class="wrapper show-on-scroll">

        <div>
            <div class="sitewide--title-wrapper">
            {% if settings.heading_style == 'zigzag' %}<span class="zig-zag-border"></span>{% endif %}
            {% if section.settings.title != '' %}
                <h2 class="homepage-sections--title">{{ section.settings.title | escape }}</h2>
            {% endif %}
            </div>
        </div>

        <!-- contact blog content slot -->
        <div id="contact-blog-articles">

        </div>

    </div>

</div>

{% schema %}
{
    "name": {
        "en": "Blog posts (Contact Page)",
        "de": "Blogposts (Contact Page)",
        "es": "blog (Contact Page)",
