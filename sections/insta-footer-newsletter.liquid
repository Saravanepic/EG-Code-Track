{% if section.settings.show_section == true %}

  <style>
  #insta-feed{width:100%;}
  #insta-feed h2{display: none;}
  </style>

  {% case section.settings.colors %}
    {% when 'white' %}
      <div class="homepage-sections-wrapper homepage-sections-wrapper--white newsletter--section">
    {% when 'light' %}
      <div class="homepage-sections-wrapper homepage-sections-wrapper--light newsletter--section">
    {% when 'accent' %}
      <div class="homepage-sections-wrapper homepage-sections-wrapper--accent newsletter--section">
    {% when 'dark' %}
      <div class="homepage-sections-wrapper homepage-sections-wrapper--dark newsletter--section">
  {% endcase %}

    <div class="wrapper show-on-scroll">
      <div class="gridlayout row--table">
        {% comment %}
        <div class="grid__item extra-large--one-half small--one-whole newsletter--section--grid vertical--align" id="newsletter-instagram-block">

        <div class="newsletter--section--grid_inner newsletter_title">
          <h3>{{ section.settings.instagram_heading }}</h3>
        </div>

          <!--<div id="insta-feed"></div>-->

        </div>
        {% endcomment %}
        <div class="grid__item extra-large--one-whole small--one-whole newsletter--section--grid vertical--align">

          <div class="newsletter--section--grid_inner newsletter_title">
            <h3>{{ section.settings.newsletter_heading }}</h3>
              {% if section.settings.newsletter_description != empty %}
                <div class="rte">{{ section.settings.newsletter_description }}</div>
              {% endif %}
          </div>

          <div class="newsletter--section--grid_inner newsletter_form_section">

              {% comment %}
              {% form 'customer' %}
                <input type="hidden" name="contact[tags]" value="Website Newsletter Footer">
                <div id="newsletter-wrapper" class="gridlayout newsletter-wrapper-sizer">
                  <div class="grid__item small--one-whole large--one-half">
                    <label for="newsletter_text_name">{{ 'general.newsletter_form_section.newsletter_text_name' | t }}</label>
                    <input id="newsletter_text_name" type="text" value="{% if customer %}{{ customer.firstName }} {{ customer.firstName }}{% endif %}" placeholder="" name="contact[first_name]" class="input-group-field name" aria-label="{{ 'general.newsletter_form_section.newsletter_text_name' | t }}" autocorrect="off" autocapitalize="off">
                    <input type="hidden" value="" name="contact[last_name]">
                  </div>
                  <div class="grid__item small--one-whole large--one-half">
                    <label for="newsletter_text">{{ 'general.newsletter_form_section.newsletter_text' | t }}</label>
                    <input id="newsletter_text" type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{{ 'general.newsletter_form_section.newsletter_text_inner' | t }}" name="contact[email]" class="input-group-field email" aria-label="{{ 'general.newsletter_form_section.newsletter_email' | t }}" autocorrect="off" autocapitalize="off">
                  </div>
                </div>
                <div class="gridlayout newsletter-wrapper-sizer newsletter-wrapper-submits">
                  <div class="grid__item small--one-whole large-one-whole extra-large--two-thirds">
                    <div class="consent-block">
                      <input id="newsletter_gdpr" type="checkbox" name="contact[consent]" required>
                      <label for="newsletter_gdpr" class="consent">
                      {% if section.settings.newsletter_consent != empty %}
                        <div class="rte">{{ section.settings.newsletter_consent }}</div>
                      {% endif %}
                      </label>
                    </div>
                  </div>
                  <div class="grid__item small--one-whole large-one-whole extra-large--one-third" style="vertical-align: top;">
                    <input id="newsletter_submit" type="submit" class="btn btn-default" name="subscribe" value="Subscribe">
                  </div>
                </div>

              {{ form.errors | default_errors }}
              {% if form.posted_successfully? %}
                <p class="note form-success success_section">{{ 'general.newsletter_form_section.thanks' | t }}</p>
              {% endif %}
              {% endform %}
              {% endcomment %}

            {% comment %} Replace Shopify form with HubSpot injected form.. {% endcomment %}

          <div id="newsletter-wrapper" class="newsletter-wrapper-sizer">
            <div>
            <!--[if lte IE 8]>
            <script charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/v2-legacy.js"></script>
            <![endif]-->
            <script charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/v2.js"></script>
            <script>
              hbspt.forms.create({
              portalId: "7609117",
              formId: "657ac3d0-2b2a-4528-8fd3-3bed691a11c4"
            });
            </script>
            </div>
          </div>

          </div>
        </div>

      </div>
    </div>

  </div>
{% endif %}

