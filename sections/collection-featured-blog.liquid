{% if collection.handle == 'all' or collection.metafields.accentuate.collection_type == 'Artworks' %}
  {% assign pseudo_all = true %}
{% else %}
  {% assign pseudo_all = false %}
{% endif %}

{% unless pseudo_all %}
{% case section.settings.colors %}
  {% when 'white' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--white">
  {% when 'light' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--light">
  {% when 'accent' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--accent">
  {% when 'dark' %}
    <div class="homepage-sections-wrapper homepage-sections-wrapper--dark">
{% endcase %}
    <div class="wrapper show-on-scroll collection-blog-display" id="news" style="display: none;">

        <div class="homepage-indiv-section-wrapper">
            <div class="sitewide--title-wrapper">
                {% if settings.heading_style == 'zigzag' %}<span class="zig-zag-border"></span>{% endif %}
                {% if section.settings.title != '' %}
                <h2 class="homepage-sections--title">
                    <a id="collection-blog-link" data-href="/blogs/news/tagged/{{ collection.handle }}">
                    {{ collection.title }} {{ section.settings.title | escape }}
                    </a>
                </h2>
                {% endif %}
            </div>

            {% if section.settings.richtext != '' %}
            <div class="gridlayout">
                <div class="grid__item large--one-half push--large--one-quarter">
                    <div class="homepage-sections--description">{{ section.settings.richtext }}</div>
                </div>
            </div>
            {% endif %}


            <!-- collection blog content slot -->
            <div id="collection-blog-articles" data-tag="{{ collection.handle }}">

            </div>

        </div>

    </div>

</div>
{% endunless %}


